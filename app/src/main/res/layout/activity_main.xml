<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_one"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Play Market"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.155" />


    <TextView
        android:id="@+id/text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:background=""
        android:gravity="center"
        android:text="Login"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/tv_one"
        app:layout_constraintRight_toRightOf="@id/tv_one"
        app:layout_constraintTop_toBottomOf="@id/tv_one" />

    <EditText
        android:id="@+id/ed_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/black"
        android:hint=""
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/text"
        app:layout_constraintRight_toRightOf="@id/text"
        app:layout_constraintTop_toBottomOf="@+id/text" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background=""
        android:gravity="center"
        android:text="parol"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ed_parol"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/ed_login"
        app:layout_constraintRight_toRightOf="@id/ed_login" />



    <EditText
        android:id="@+id/ed_parol"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:hint=""
        android:textSize="20sp"
        android:background="@color/cardview_dark_background"
        app:layout_constraintLeft_toLeftOf="@id/ed_login"
        app:layout_constraintRight_toRightOf="@id/ed_login"
        app:layout_constraintTop_toBottomOf="@+id/ed_login" />


    <Button
        android:id="@+id/btn_list2"
        android:layout_width="225dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:hint="Войти"
        android:onClick="setClik"
        android:text="Добавить"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintLeft_toLeftOf="@id/ed_parol"
        app:layout_constraintRight_toRightOf="@id/ed_parol"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.921" />

</androidx.constraintlayout.widget.ConstraintLayout>

